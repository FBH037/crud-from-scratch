<%= form_for @status_update do |f| %>
<%= f.label :user %>
<%= f.text_field :user %><br>
<%= f.label :status%>
<%= f.text_field :status %><br>
<br>
<% if @status_update.new_record? %>
<%= f.submit "Create Status" %>
<% else %>
<%= f.submit "Update Status" %>
<% end %>
<% end %>
<br>
<%= link_to "Cancel", status_updates_path %>
